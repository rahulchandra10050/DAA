Aim: Analyze if the stack is empty or full, and if elements are present, 
return the top element in the stack using templates. Also, perform push and pop operations on the stack.


#include <iostream>
using namespace std;

template <class T>
class Stack {
    int top, size;
    T *arr;
public:
    Stack(int s) {
        size = s;
        arr = new T[size];
        top = -1;
    }
    void push(T x) {
        if (top == size - 1)
            cout << "Stack is full\n";
        else
            arr[++top] = x;
    }
    void pop() {
        if (top == -1)
            cout << "Stack is empty\n";
        else
            top--;
    }
    void peek() {
        if (top == -1)
            cout << "Stack is empty\n";
        else
            cout << "Top element: " << arr[top] << endl;
    }
    bool isEmpty() {
        return top == -1;
    }
    bool isFull() {
        return top == size - 1;
    }
};

int main() {
    Stack<int> s(5);
    s.push(10);
    s.push(20);
    s.peek();
    s.pop();
    s.peek();
    if (s.isEmpty()) cout << "Stack is empty\n";
    else cout << "Stack is not empty\n";
    return 0;
}
